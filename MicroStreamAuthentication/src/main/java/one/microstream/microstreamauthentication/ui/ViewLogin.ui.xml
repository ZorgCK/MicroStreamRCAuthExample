<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xdevuiml version="1.0"?>
<?template NONE?>
<?import com.vaadin.flow.component.button.Button?>
<?import com.vaadin.flow.component.login.LoginForm?>
<?import com.vaadin.flow.component.orderedlayout.VerticalLayout?>
<VerticalLayout xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="ViewLogin" justifyContentMode="com.vaadin.flow.component.orderedlayout.FlexComponent.JustifyContentMode.CENTER" defaultHorizontalComponentAlignment="com.vaadin.flow.component.orderedlayout.FlexComponent.Alignment.CENTER" x:route="">
    <x:constraints zpos="0" width="100%" height="100%" />
    <Button x:name="button" text="Initialize Database">
        <x:constraints width="0px" height="0px" flex-grow="0.0" />
        <x:event>click.onComponentEvent</x:event>
    </Button>
    <LoginForm x:name="loginForm">
        <x:constraints width="0px" height="0px" flex-grow="0.0" />
        <x:event>login.onComponentEvent</x:event>
        <x:event>forgotPassword.onComponentEvent</x:event>
    </LoginForm>
</VerticalLayout>
